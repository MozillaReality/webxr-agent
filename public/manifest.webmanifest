  "start_url": "./?src=manifest",
  "scope": "./",
  "display": "fullscreen",
  "theme_color": "#177bdb",
  "background_color": "#000",
  "icons": [
    {
      "src": "img/logo.svg",
      "sizes": "290x290",
      "type": "image/svg",
      "border-radius": "3px"
    },
    {
      "src": "img/logo-256.png",
      "sizes": "580x580",
      "type": "image/png",
      "density": "2"
    },
    {
      "src": "favicon.ico",
      "sizes": "16x16 32x32 48x48 64x64 256x256",
      "type": "image/x-icon"
    }
  ],
  "vr_default_display": "HTC Vive",
  "vr_available_displays": [
    "HTC Vive",
    "Oculus Rift",
    "Google Daydream",
    "Samsung Gear VR",
    "Google Cardboard"
  ]
