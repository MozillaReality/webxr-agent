{
  "default_locale": "en",
  "name": "__MSG_extensionName__",
  "version": "0.8.0",
  "manifest_version": 2,
  "description": "__MSG_extensionDescription__",
  "homepage_url": "https://github.com/webvrrocks/webvr-agent/tree/extension/firefox/",
  "icons": {
    "64": "icons/icon-blue.png"
  },
  "permissions": [
    "<all_urls>",
    "activeTab",
    "contextMenus",
    "notifications",
    "storage",
    "tabs",
    "webRequest",
    "webRequestBlocking"
  ],
  "background": {
    "scripts": [
      "background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "content_script.js"
      ]
    }
  ],
  "page_action": {
    "browser_style": true,
    "default_icon": "icons/icon-gray.svg",
    "default_title": "__MSG_extensionPageActionDefaultTitle__"
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": {
      "64": "icons/icon-gray.png"
    },
    "default_title": "__MSG_extensionBrowserActionDefaultTitle__",
    "default_popup": "popup.html"
  }
}
